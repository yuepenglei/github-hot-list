.box {
  position: fixed;
  top: 0;
  /* left: 0; */
  right: 0;
  z-index: 999;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  flex-direction: column;
  width: 600rpx;
}
.arrow {
  width: 0;
  height: 0;
  margin-right: 120rpx;
  border-width: 20rpx;
  border-style: solid;
  border-color:  transparent transparent #dce4ec transparent;
}
.body {
  background-color: #dce4ec;
  box-shadow: 0 10rpx 20rpx -10rpx #dce4ec;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 84rpx;
  padding: 0 20rpx;
  margin-right: 40rpx;
}
.body > text {
  color: rgb(19, 2, 2);
  font-size: 28rpx;
  font-weight: 400;
}

.modal {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 20rpx;
}
.modal > view {
  margin: 10rpx 0;
  display: flex;
  /* align-items: center; */
  flex-direction: column;
}
.modal > view > text {
  font-size: 32rpx;
  font-weight: 400;
  margin-bottom: 5rpx;
  color: #333;
}
.modal > view > image {
  border-radius: 10rpx;
}

.ok-btn {
  width: 100%;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.ok-btn > view {
  height: 40rpx;
  width: 120rpx;
  background-color: #34b5e2;
  box-shadow: 0 5rpx 10rpx -rpx #34b5e2;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
}
.ok-btn > view > text {
  font-size: 14rpx;
  color: #fff;
  font-weight: 400;
}
.btn-hover {
  opacity: 0.6;
}