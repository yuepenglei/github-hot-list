/**index.wxss**/

.userinfo {
  position: relative;
  width: 750rpx;
  height: 320rpx;
  color: #000;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.userinfo text {
  font-size: 30rpx;
  background-color: #c0c0c0;
  border-radius: 40%;
}

.authorize_btn {
  width: 400rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
}
