.search {
margin:0 20rpx;
display: flex;
justify-content:center;
border:1rpx solid #5BD4AD;
border-radius: 20rpx !important;
height: 70rpx;
text-align:center;
vertical-align:middle;

}
.search picker {
 line-height:70rpx;
 width:100%;
}
.search image {
  width: 40rpx;
  height: 40rpx;
  margin-right:20rpx;
   line-height:70rpx;
  

}

/* .repo:first-of-type {
  padding-top: 46px;
} */

.repo {
  border-bottom: 1rpx solid rgba(65, 65, 65, 0.9);
}

.fix-top {
  position:fixed;
  bottom: 300rpx;
  right: 60rpx;
  height: 60rpx;
  display: flex;
  background-color: transparent;
}

.fix-top .lang-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

button {
  border-radius: 0;
  color: #eee;
  line-height: 1.5;
}

.van-search {
  width: 100%;
  position: fixed;
  padding: 20rpx !important;
  background: #24292e;
}

.van-search__field .field-index--van-field {
  border-radius: 8rpx !important;
}

.repo {
  padding: 20rpx 20rpx;
  color: #b8b8b8;
  display: flex;
}

.repo .sort-num {
  font-weight:800;
  width: 20rpx;
  display: flex;
  justify-content:center;/*x轴对齐方式*/
  align-items:center;     /*y轴对滴方式*/
}

.repo .first-color {
  color: #F54545;
}

.repo .second-color {
  color: #FF8547;
}

.repo .third-color {
  color: #FFAC38;
}


.repo .name {
  color: #fff;
  font-size: 30rpx;
  word-break: break-all;
  display: flex;
  flex: 1;
  flex-wrap: wrap;
}

.repo .desc {
  font-size: 24rpx;
  margin: 10rpx 0;
  word-break: break-all;
  display: flex;
  flex: 1;
  flex-wrap: wrap;
  text-align: left
}

.bottom {
  display: flex;
  font-size: 24rpx;
  margin: 10rpx 0;
}

.bottom image {
  width: 30rpx;
  height: 30rpx;
}


.bottom view:not(:first-child) {
  margin-left: 20rpx;
}

/* .bottom view:not(:last-child) {
  width: 20%;
} */

.bottom view {
  display: flex;
}

.bottom view text {
  margin-left: 5rpx;
}

.mark image{
  width: 50rpx;
  height: 50rpx;
}

.mark{
  position: absolute;
  right: 10rpx;
  display: flex;
  width: 50rpx;
  height: 50rpx;
  margin-top: 20rpx
}
.fork-mark {
  background-color: #fff;
  color: #000;
  padding: 0 10rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

/* 可移动区域样式  */
.movearea{
  position: relative;
  width: 100vw;
  height: 100vh;
}
.movearea .moveview{
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  z-index: 100;
}